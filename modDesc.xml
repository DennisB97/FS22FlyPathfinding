<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="74">
    <author>Dennis B</author>
    <version>1.0.0.0</version>

    <title>
        <en>Fly Pathfinding "Library" Mod</en>
    </title>

    <description>
        <en><![CDATA[
3D pathfinding with an octree, A* pathfinding and Catmull-Rom, to be used together with other mods that utilizes it. NOT a standalone mod!
    ]]></en>
    </description>

	<iconFilename>icon_flypathfinding.dds</iconFilename>
    <l10n filenamePrefix="translations/l10n"/>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="scripts/flyPathfinding.lua" />
        <sourceFile filename="scripts/gridMap3D.lua" />
        <sourceFile filename="scripts/states/gridMap3DStates.lua" />
        <sourceFile filename="scripts/aStar.lua" />
        <sourceFile filename="scripts/debug/aStarDebug.lua" />
        <sourceFile filename="scripts/catmullRomSpline.lua" />
        <sourceFile filename="scripts/debug/catmullRomSplineDebug.lua" />
    </extraSourceFiles>

    <inputBinding>
        <actionBinding action="FLYPATHFINDING_DBG_PREVIOUS">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_lshift KEY_lalt KEY_KP_minus" />
		</actionBinding>
		<actionBinding action="FLYPATHFINDING_DBG_NEXT">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_lshift KEY_lalt KEY_KP_plus" />
		</actionBinding>
        <actionBinding action="FLYPATHFINDING_DBG_ASTAR_SHOW_CLOSEDNODES">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_lshift KEY_lalt KEY_c" />
		</actionBinding>
    </inputBinding>

	<actions>
		<action name="FLYPATHFINDING_DBG_PREVIOUS" />
		<action name="FLYPATHFINDING_DBG_NEXT" />
		<action name="FLYPATHFINDING_DBG_ASTAR_SHOW_CLOSEDNODES" />
	</actions>

</modDesc>